 @model IEnumerable<MedicalRecord>

@{
    ViewData["Title"] = "Medical Records";
}

<div class="container">
    <h2 class="text-center mt-4">Medical Records</h2>

    <!-- Search Card for searching by Patient ID -->
    <div class="card mt-4 mb-4">
        <div class="card-header">
            <h4>Search Medical Records</h4>
        </div>
        <div class="card-body">
            <form asp-controller="MedicalRecord" asp-action="Index">
                <div class="form-group row">
                    <label for="patientId" class="col-sm-2 col-form-label">Patient ID</label>
                    <div class="col-sm-8">
                        <input type="number" class="form-control" id="patientId" name="patientId" placeholder="Enter Patient ID" required />
                    </div>
                    <div class="col-sm-2">
                        <button type="submit" class="btn btn-primary btn-block">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Check if there are records to display -->
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Diagnose</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var record = Model.ElementAt(i);
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@record.Diagnose</td>
                        <td>
                            <a asp-controller="MedicalRecord" asp-action="Details" asp-route-recordId="@record.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                            <a asp-controller="MedicalRecord" asp-action="Delete" asp-route-recordId="@record.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center mt-4 text-muted">No medical records found for this patient.</p>
    }

    <!-- Show this if the user has a role -->
    <div class="text-center mt-4">
        <a asp-action="Add" asp-route-patientId="@ViewBag.PatientId" class="btn btn-primary">Add New Medical Record</a>
    </div>
</div>
