@model AddNurseVM

@{
    ViewData["Title"] = "Add Nurse";
}


<div class="container mt-4">
    <h2>Add Nurse</h2>
    <form asp-action="Add" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Age" class="form-label"></label>
            <input asp-for="Age" class="form-control" type="number" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Shift" class="form-label"></label>
            <select asp-for="Shift" class="form-control">
                <option value="">-- Select Shift --</option>
                @foreach (var shift in Enum.GetValues(typeof(DAL.Models.Shift)))
                {
                    <option value="@shift">@shift</option>
                }
            </select>
            <span asp-validation-for="Shift" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Salary" class="form-label"></label>
            <input asp-for="Salary" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AspNetUsersId" class="form-label"></label>
            <input asp-for="AspNetUsersId" class="form-control" />
            <span asp-validation-for="AspNetUsersId" class="text-danger"></span>
        </div>
        <div class="mt-4">
            <button type="submit" class="btn btn-success">Add Nurse</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
