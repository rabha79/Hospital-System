@model DAL.Models.Nurse

@{
    ViewBag.Title = "Nurse Details";
}

<h2>Nurse Details</h2>

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Nurse ID:</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Name:</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Age:</dt>
            <dd class="col-sm-10">@Model.Age </dd>

            <dt class="col-sm-2">Address:</dt>
            <dd class="col-sm-10">@(Model.Address ?? "N/A")</dd>

            <dt class="col-sm-2">Shift:</dt>
            <dd class="col-sm-10">@Model.Shift.ToString()  </dd>

            <dt class="col-sm-2">Salary:</dt>
            <dd class="col-sm-10">@Model.Salary</dd>

            <dt class="col-sm-2">Associated User:</dt>
            <dd class="col-sm-10">@Model.AspNetUsersId</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">Delete</a>
</div>
