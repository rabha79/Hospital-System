@model Department
@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center text-danger mb-4">Delete Department</h2>
            <div class="alert alert-warning text-center" role="alert">
                Are you sure you want to delete the department: <strong>@Model.Name</strong>?
            </div>
            <div class="card p-4 shadow-sm rounded">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="HeadId" class="control-label">Head of Department (Doctor ID)</label>
                        <input asp-for="HeadId" class="form-control" readonly />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
