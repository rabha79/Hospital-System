@{
    ViewData["Title"] = "Welcome";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Welcome to Our Hospital Management System</h1>

                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading"><i class="fas fa-info-circle"></i> Important Information</h4>
                        <p>This system is designed exclusively for the workers and patients of our hospital.</p>
                    </div>

                    <h2 class="mb-3">Who can use this system?</h2>
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item"><i class="fas fa-user-md text-primary"></i> Hospital Staff</li>
                        <li class="list-group-item"><i class="fas fa-user-injured text-success"></i> Registered Patients</li>
                        <li class="list-group-item"><i class="fas fa-user-shield text-danger"></i> Hospital Administrators</li>
                    </ul>

                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Account Creation</h4>
                        <p>Please note that only hospital administrators can create accounts for users. If you need an account, please contact the hospital administration.</p>
                    </div>

                    <div class="text-center mt-4">
                        <h3>Do you have an account?</h3>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg mt-2">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                    </div>

                    <hr class="my-4">

                    <div class="text-center">
                        <h4>Not a registered user?</h4>
                        <p class="lead">We wish you the best of health! If you're a patient seeking medical attention, please visit our hospital or contact us directly.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>