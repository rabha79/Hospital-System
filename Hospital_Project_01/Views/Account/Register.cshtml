
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">

<div class="bg-gray-100">
    <div class="min-h-screen flex items-center justify-center">
        <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-md">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Create user account
                </h2>
            </div>

            <div asp-validation-summary="All">    </div>

            <form asp-action="Register" method="post" class="mt-8 space-y-6">
                <div class="rounded-md shadow-sm -space-y-px">
                    <div>
                        <label for="UserName" class="sr-only">Username</label>
                        <input asp-for="UserName" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Username" required>
                        <span asp-validation-for="UserName" class="text-red-500 text-xs italic"></span>
                    </div>
                    <div>
                        <label for="Email" class="sr-only">Email address</label>
                        <input asp-for="Email" type="email" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address" required>
                        <span asp-validation-for="Email" class="text-red-500 text-xs italic"></span>
                    </div>
                    <div>
                        <label for="PhoneNumber" class="sr-only">Phone number</label>
                        <input asp-for="PhoneNumber" type="tel" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Phone number">
                        <span asp-validation-for="PhoneNumber" class="text-red-500 text-xs italic"></span>
                    </div>
                    <div>
                        <label for="Password" class="sr-only">Password</label>
                        <input asp-for="Password" type="password" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password" required>
                        <span asp-validation-for="Password" class="text-red-500 text-xs italic"></span>
                    </div>
                    <div>
                        <label for="ConfirmPassword" class="sr-only">Confirm password</label>
                        <input asp-for="ConfirmPassword" type="password" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Confirm password" required>
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs italic"></span>
                    </div>
                </div>

                <div>
                    <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Register
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}