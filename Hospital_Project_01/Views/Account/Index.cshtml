@model UserDetailsViewModel
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">

<div class="container mx-auto px-4">
    <h2 class="text-2xl font-bold mb-4">User Management</h2>

    <div class="flex justify-between items-center mb-6">
        <h3 class="text-xl">User Search</h3>
        <a href="@Url.Action("Register", "Account")" class="bg-green-500 text-white px-4 py-2 rounded-md text-lg font-semibold hover:bg-green-600 transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
            Create New User
        </a>
    </div>

    <form asp-action="Index" method="get" class="mb-8">
        <div class="flex items-center shadow-lg rounded-lg overflow-hidden border border-gray-300">
            <input type="email"
                   name="searchEmail"
                   placeholder="Enter user email"
                   class="w-full px-5 py-3 text-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                   required />
            <button type="submit"
                    class="bg-blue-600 text-white px-6 py-3 text-lg font-semibold hover:bg-blue-700 transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                Search
            </button>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">@TempData["ErrorMessage"]</span>
        </div>
    }

    @if (Model != null)
    {
        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <h3 class="text-xl font-semibold mb-4">User Details</h3>
            <div class="mb-4">
                <strong>User ID:</strong> @Model.Id
            </div>
            <div class="mb-4">
                <strong>Email:</strong> @Model.Email
            </div>
            <div class="mb-4">
                <strong>Username:</strong> @Model.UserName
            </div>
            <div class="mb-4">
                <strong>Phone Number:</strong> @Model.PhoneNumber
            </div>
            <div class="mb-4">
                <strong>Roles:</strong>
                <ul class="list-disc list-inside">
                    @foreach (var role in Model.Roles)
                    {
                        <li>@role</li>
                    }
                </ul>
            </div>
        </div>
    }
</div>