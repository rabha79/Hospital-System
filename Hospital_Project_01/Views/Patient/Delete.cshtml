@model DAL.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<h2>Delete Patient</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this patient?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>            
            
            <dt class="col-sm-3">Patient ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Age</dt>
            <dd class="col-sm-9">@Model.Age</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Medical History</dt>
            <dd class="col-sm-9">@Model.History</dd>            
            
            <dt class="col-sm-3">User ID</dt>
            <dd class="col-sm-9">@Model.AspNetUsersId</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
