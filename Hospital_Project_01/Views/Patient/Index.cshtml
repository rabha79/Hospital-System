@model IEnumerable<Patient>

@{
    ViewData["Title"] = "Patient List";
}

<h2>Patient List</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Add New Patient</a>


<table class="table table-bordered table-striped mt-3">
    <thead>
        <tr>
            <th>Patient ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Id</td>
                <td>@patient.Name</td>
                <td>@patient.Age</td>
                <td>@patient.Address</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@patient.Id" >Details</a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@patient.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@patient.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

