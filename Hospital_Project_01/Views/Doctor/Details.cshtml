 @model Doctor
@{
    ViewData["Title"] = "Doctor Details";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">

<h2 class="text-2xl font-semibold mb-6">Doctor Details</h2>

<div class="bg-white shadow-md rounded-lg p-6">
    <h3 class="text-lg font-bold mb-4">@Model.Name</h3>
    <div class="space-y-3">
        <p><strong>Age:</strong> @Model.Age</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>Salary:</strong> @Model.Salary?.ToString("C")</p>
        <p><strong>Rank:</strong> @Model.Rank.ToString()</p>
        <p><strong>Shift:</strong> @Model.Shift.ToString()</p>
        <p><strong>Department:</strong> @Model.Department?.Name</p>
        <p><strong>User Account:</strong> @Model.AspNetUsersId</p>
    </div>

    <div class="flex justify-end space-x-4 mt-6">
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition duration-300">Edit</a>
        <a href="@Url.Action("Delete", new { id = Model.Id })" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition duration-300">Delete</a>
        <a href="@Url.Action("Index")" class="bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700 transition duration-300">Back to List</a>
    </div>
</div>
