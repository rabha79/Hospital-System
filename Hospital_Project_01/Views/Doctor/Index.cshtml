@model IEnumerable<Doctor>
@{
    ViewBag.Title = "Doctors List";
}

<h2>Doctors List</h2>

<a asp-action="Add" class="btn btn-primary mb-3">Add New Doctor</a>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Rank</th>
            <th scope="col">Shift</th>
            <th scope="col">Department</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.Name</td>
                    <td>@doctor.Age</td>
                    <td>@doctor.Rank</td>
                    <td>@doctor.Shift</td>
                    <td>@doctor.Department?.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@doctor.Id" class="btn btn-sm btn-danger">Delete</a>
                        <a asp-action="Details" asp-route-id="@doctor.Id" class="btn btn-sm btn-outline-info">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">No doctors found.</td>
            </tr>
        }
    </tbody>
</table>
