@model Admin
@{
    ViewData["Title"] = "Edit Admin";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">

<div class="bg-gray-100">
    <div class="container mx-auto px-4 sm:px-8">
        <div class="py-8">
            <div>
                <h2 class="text-2xl font-semibold leading-tight">Admin Details</h2>
            </div>
            <div class="mt-5">
                <form asp-action="" method="post">

                    <div class="mb-4">
                        <label asp-for="Name" class="block text-gray-700 text-sm font-bold mb-2"></label>
                        <input readonly asp-for="Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>                    
                    <div class="mb-4">
                        <label asp-for="Id" class="block text-gray-700 text-sm font-bold mb-2">Admin ID</label>
                        <input readonly asp-for="Id" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div class="mb-4">
                        <label asp-for="Age" class="block text-gray-700 text-sm font-bold mb-2"></label>
                        <input readonly asp-for="Age" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div class="mb-4">
                        <label asp-for="Address" class="block text-gray-700 text-sm font-bold mb-2"></label>
                        <input readonly asp-for="Address" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    </div>
                    <div class="mb-4">
                        <label asp-for="AspNetUsersId" class="block text-gray-700 text-sm font-bold mb-2"></label>
                        <input readonly asp-for="AspNetUsersId" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                      
                    </div>
                    <div class="flex items-center justify-between">
                        <a asp-action="Index" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                            Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
