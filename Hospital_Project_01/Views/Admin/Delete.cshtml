@model DAL.Models.Admin
@{
    ViewData["Title"] = "Delete Admin";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">

<div class="bg-gray-100">
    <div class="min-h-screen flex items-center justify-center">
        <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold text-center text-gray-800 mb-8">Delete Admin</h2>

            <div class="text-center mb-6">
                <p class="text-red-600 font-semibold">Are you sure you want to delete this admin?</p>
            </div>

            <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-700 mb-2">Admin Details:</h3>
                <p><span class="font-medium">Name:</span> @Model.Name</p>
                <p><span class="font-medium">Age:</span> @Model.Age</p>
                <p><span class="font-medium">Address:</span> @Model.Address</p>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Name" />
                <input type="hidden" asp-for="AspNetUsersId" />

                <div class="flex justify-between items-center">
                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300">
                        Confirm Delete
                    </button>
                    <a href="@Url.Action("Index", "Admin")" class="text-blue-500 hover:text-blue-600 font-semibold transition duration-300">
                        Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
