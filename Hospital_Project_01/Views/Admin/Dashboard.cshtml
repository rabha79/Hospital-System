
@{
    ViewData["Title"] = "Admin Dashboard";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>

<div class="bg-gray-100">
    <div class="min-h-screen">
        <nav class="bg-gray-800 text-white p-4">
            <div class="container mx-auto">
                <h1 class="text-2xl font-bold">Admin Dashboard</h1>
            </div>
        </nav>

        <main class="container mx-auto mt-8 px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Appointments -->
                <a href="@Url.Action("Index", "Appointment")" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div class="flex items-center">
                        <i class="fas fa-calendar-alt text-3xl text-blue-500 mr-4"></i>
                        <h2 class="text-xl font-semibold">Manage Appointments</h2>
                    </div>
                </a>

                <!-- Doctors -->
                <a href="@Url.Action("Index", "Doctor")" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div class="flex items-center">
                        <i class="fas fa-user-md text-3xl text-green-500 mr-4"></i>
                        <h2 class="text-xl font-semibold">Manage Doctors</h2>
                    </div>
                </a>

                <!-- Patients -->
                <a href="@Url.Action("Index", "Patient")" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div class="flex items-center">
                        <i class="fas fa-users text-3xl text-purple-500 mr-4"></i>
                        <h2 class="text-xl font-semibold">Manage Patients</h2>
                    </div>
                </a>

                <!-- Nurses -->
                <a href="@Url.Action("Index", "Nurse")" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div class="flex items-center">
                        <i class="fas fa-user-nurse text-3xl text-pink-500 mr-4"></i>
                        <h2 class="text-xl font-semibold">Manage Nurses</h2>
                    </div>
                </a>

                <!-- Bills -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <div class="flex items-center mb-4">
                        <i class="fas fa-file-invoice-dollar text-3xl text-yellow-500 mr-4"></i>
                        <h2 class="text-xl font-semibold">Manage Bills</h2>
                    </div>
                    <div class="space-y-2">
                        <a href="@Url.Action("Index", "Bill")" class="block text-blue-500 hover:underline">All Bills</a>
                        <form asp-action="Index" asp-controller="Bill" method="get" class="flex">
                            <input type="text" name="billId" placeholder="Bill ID" class="flex-grow px-2 py-1 border rounded-l-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <button type="submit" class="bg-blue-500 text-white px-4 py-1 rounded-r-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Search</button>
                        </form>
                        <form asp-action="Index" asp-controller="Bill" method="get" class="flex">
                            <input type="text" name="patientId" placeholder="Patient ID" class="flex-grow px-2 py-1 border rounded-l-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <button type="submit" class="bg-blue-500 text-white px-4 py-1 rounded-r-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Search</button>
                        </form>
                    </div>
                </div>

                <!-- Medical Records -->
                <a href="@Url.Action("Index", "MedicalRecord")" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div class="flex items-center">
                        <i class="fas fa-notes-medical text-3xl text-red-500 mr-4"></i>
                        <h2 class="text-xl font-semibold">Manage Medical Records</h2>
                    </div>
                </a>

                <!-- Admins -->
                <a href="@Url.Action("Index", "Admin")" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div class="flex items-center">
                        <i class="fas fa-user-shield text-3xl text-blue-500 mr-4"></i>
                        <h2 class="text-xl font-semibold">Manage Admins</h2>
                    </div>
                </a>

                <!-- System Users -->
                <a href="@Url.Action("Index", "Account")" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div class="flex items-center">
                        <i class="fas fa-users-cog text-3xl text-purple-500 mr-4"></i>
                        <h2 class="text-xl font-semibold">Manage System Users</h2>
                    </div>
                </a>

                <!-- Department Management -->
                <a href="@Url.Action("Index", "Department")" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div class="flex items-center">
                        <i class="fas fa-building text-3xl text-black-500 mr-4"></i>
                        <h2 class="text-xl font-semibold">Manage Departments</h2>
                    </div>
                </a>

            </div>
        </main>
    </div>
</div>

