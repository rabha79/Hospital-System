@model PL.ViewModels.AdminVM
@{
    ViewData["Title"] = "Edit Admin";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">

<div class="bg-gray-100">
    <div class="container mx-auto px-4 sm:px-8">
        <div class="py-8">
            <div>
                <h2 class="text-2xl font-semibold leading-tight">Edit Admin</h2>
            </div>
            <div class="mt-5">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-red-500 text-xs italic"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-4">
                        <label asp-for="Name" class="block text-gray-700 text-sm font-bold mb-2"></label>
                        <input asp-for="Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                        <span asp-validation-for="Name" class="text-red-500 text-xs italic"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Age" class="block text-gray-700 text-sm font-bold mb-2"></label>
                        <input asp-for="Age" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                        <span asp-validation-for="Age" class="text-red-500 text-xs italic"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Address" class="block text-gray-700 text-sm font-bold mb-2"></label>
                        <input asp-for="Address" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                        <span asp-validation-for="Address" class="text-red-500 text-xs italic"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="AspNetUsersId" class="block text-gray-700 text-sm font-bold mb-2"></label>
                        <input asp-for="AspNetUsersId" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                        <span asp-validation-for="AspNetUsersId" class="text-red-500 text-xs italic"></span>
                    </div>
                    <div class="flex items-center justify-between">
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                            Update Admin
                        </button>
                        <a href="@Url.Action("Index", "Admin")" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                            Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}